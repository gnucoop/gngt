{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../../dist/packages/core/schematics",
    "noEmitOnError": false,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": ".",
    "paths": {}
  },
  "exclude": [
    "**/files/**/*",
    "**/*.spec.ts",
    "testing/**/*.ts"
  ],
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}